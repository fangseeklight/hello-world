<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/backgroundblue1"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="45dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="Signup"
        android:textAlignment="center"
        android:textColor="@color/place_autocomplete_prediction_primary_text"
        android:textSize="40sp"
        android:textStyle="normal|bold|italic" />

    <EditText
        android:id="@+id/inputUsername"
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="155dp"
        android:background="@drawable/button0"
        android:hint="Input User Name"
        android:textAlignment="center"
        android:textColor="@color/place_autocomplete_prediction_primary_text"
        android:textSize="30sp"
        android:textStyle="normal|bold|italic" />

    <EditText
        android:id="@+id/inputPassword1"
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="239dp"
        android:background="@drawable/button0"
        android:hint="Input Password"
        android:textAlignment="center"
        android:textColor="@color/place_autocomplete_prediction_primary_text"
        android:textSize="30sp"
        android:textStyle="normal|bold|italic" />

    <EditText
        android:id="@+id/inputPassword2"
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="324dp"
        android:background="@drawable/button0"
        android:hint="Input Password Again"
        android:textAlignment="center"
        android:textColor="@color/place_autocomplete_prediction_primary_text"
        android:textSize="30sp"
        android:textStyle="normal|bold|italic" />

    <EditText
        android:id="@+id/inputEmail"
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="302dp"
        android:background="@drawable/button0"
        android:hint="Input E-mail Address"
        android:textAlignment="center"
        android:textColor="@color/place_autocomplete_prediction_primary_text"
        android:textSize="30sp"
        android:textStyle="normal|bold|italic" />

    <TextView
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="219dp"
        android:background="@drawable/button0"
        android:text="Choose your age below"
        android:textAlignment="center"
        android:textColor="@color/place_autocomplete_prediction_primary_text"
        android:textSize="30sp"
        android:textStyle="normal|bold|italic" />

    <RadioGroup
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="136dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/below6"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button0"
            android:text="0-6 years"
            android:textAlignment="center"
            android:textColor="@color/place_autocomplete_prediction_primary_text"
            android:textStyle="normal|bold|italic" />

        <RadioButton
            android:id="@+id/above6"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button0"
            android:text="7-12 years"
            android:textAlignment="center"
            android:textColor="@color/place_autocomplete_prediction_primary_text"
            android:textStyle="normal|bold|italic" />

        <RadioButton
            android:id="@+id/above12"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button0"
            android:text="12 years+"
            android:textAlignment="center"
            android:textColor="@color/place_autocomplete_prediction_primary_text"
            android:textStyle="normal|bold|italic" />

    </RadioGroup>

    <Button
        android:id="@+id/join"
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp"
        android:background="@drawable/button0"
        android:text="Join Now!"
        android:textAlignment="center"
        android:textColor="@color/place_autocomplete_prediction_primary_text"
        android:textSize="30sp"
        android:textStyle="normal|bold|italic" />

</RelativeLayout>
