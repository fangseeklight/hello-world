<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/backgroundblue1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hi there,"
        android:textColor="@color/place_autocomplete_prediction_primary_text"
        android:textSize="30sp"
        android:textStyle="bold|italic" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please make sure your bluetooth is working"
        android:textColor="@color/place_autocomplete_prediction_primary_text"
        android:textSize="20sp"
        android:textStyle="bold|italic" />
    <TextView
        android:id="@+id/textView1"
        android:layout_width= "match_parent"
        android:layout_height= "wrap_content"
        android:textSize="20sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="331dp"
            android:layout_weight="1"
            android:padding="50dp"></LinearLayout>

        <ImageButton
            android:id="@+id/CheckAddEnergy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="2"
            android:adjustViewBounds="true"
            android:background="#00000000"
            android:padding="20dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/check1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="20dp"></LinearLayout>
    </LinearLayout>

</LinearLayout>